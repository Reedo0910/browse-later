{
    "manifest_version": 2,
    "name": "Browse Later",
    "version": "2.5",
    "description": "Stash your tabs and browse later.",
    "homepage_url": "https://github.com/hoyang/browse-later",
    "icons": {
        "48": "icons/BrowseLater-64.png"
    },

    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": "icons/BrowseLater-64.png",
        "default_title": "Browse now"
    },

    "background": {
        "scripts": ["common.js", "background.js"]
    }
}
