{
    "manifest_version": 2,
    "name": "Browse Later",
    "version": "3.0.1",
    "description": "Stash your tabs and browse later.",
    "homepage_url": "https://github.com/hoyang/browse-later",
    "icons": {
        "64": "icons/icon.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "clipboardWrite"
    ],

    "browser_action": {
        "default_icon": "icons/browse-later-icon-light.png",
        "default_title": "Browse now",
        "browser_style": true
    },

    "background": {
        "scripts": ["common.js", "background.js"]
    }
}
